server {
    listen 80;
    server_name {{ public_hostname }};

    root {{ projects_path }}/public;

    location / {
        try_files $uri /index.html;
        gzip_static on;
        gzip_http_version   1.1;
        gzip_proxied        expired no-cache no-store private auth;
        gzip_disable        "MSIE [1-6]\.";
        gzip_vary           on;
    }
}
